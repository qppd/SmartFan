<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center_horizontal">

    <!-- Temperature Gauge with Material Design styling -->
    <RelativeLayout
        android:layout_width="280dp"
        android:layout_height="280dp"
        android:layout_gravity="center_horizontal">

        <!-- Background Circle -->
        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/temperature_gauge_background" />

        <!-- Temperature Progress Ring -->
        <ProgressBar
            android:id="@+id/progressBarTemperature"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="240dp"
            android:layout_height="240dp"
            android:layout_centerInParent="true"
            android:max="50"
            android:progress="25"
            android:progressDrawable="@drawable/temperature_progress_ring"
            android:indeterminate="false" />

        <!-- Center Temperature Display -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:id="@+id/textViewGaugeTemp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="25"
                android:textSize="48sp"
                android:textColor="@color/neutral_dark"
                android:fontFamily="sans-serif-light" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="°C"
                android:textSize="18sp"
                android:textColor="@color/neutral_medium"
                android:fontFamily="sans-serif" />

        </LinearLayout>

    </RelativeLayout>

    <!-- Current Temperature Display -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="16dp">

        <ImageView
            android:id="@+id/imageViewTempIcon"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_temperature"
            android:layout_marginEnd="8dp"
            app:tint="?attr/colorPrimary" />

        <TextView
            android:id="@+id/textViewCurrentTemp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="--°C"
            android:textAppearance="@style/SmartFan.Text.Body"
            android:textSize="16sp"
            android:fontFamily="sans-serif-medium" />

    </LinearLayout>

    <!-- Fan Status Display -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="8dp">

        <ImageView
            android:id="@+id/imageViewFanIcon"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_fan"
            android:layout_marginEnd="8dp"
            app:tint="@color/secondary_orange" />

        <TextView
            android:id="@+id/textViewFanStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fan: --"
            android:textAppearance="@style/SmartFan.Text.Body"
            android:textSize="16sp"
            android:fontFamily="sans-serif-medium" />

    </LinearLayout>

    <!-- Temperature Status Badge -->
    <com.google.android.material.chip.Chip
        android:id="@+id/chipTemperatureStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Normal"
        android:textColor="@color/neutral_white"
        app:chipBackgroundColor="@color/accent_green"
        app:chipIcon="@drawable/ic_check_circle"
        app:chipIconTint="@color/neutral_white"
        style="@style/Widget.MaterialComponents.Chip.Action" />

</LinearLayout>
