<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme - Dark Mode -->
    <style name="Theme.SmartFan" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color: Cool blue/teal -->
        <item name="colorPrimary">@color/primary_blue_light</item>
        <item name="colorPrimaryVariant">@color/primary_blue</item>
        <item name="colorOnPrimary">@color/neutral_dark</item>
        
        <!-- Secondary brand color: Warm orange -->
        <item name="colorSecondary">@color/secondary_orange_light</item>
        <item name="colorSecondaryVariant">@color/secondary_orange</item>
        <item name="colorOnSecondary">@color/neutral_dark</item>
        
        <!-- Surface colors -->
        <item name="colorSurface">@color/card_background_dark</item>
        <item name="colorOnSurface">@color/neutral_light</item>
        <item name="colorOnSurfaceVariant">@color/neutral_medium</item>
        
        <!-- Background colors -->
        <item name="android:colorBackground">@color/neutral_dark</item>
        <item name="colorOnBackground">@color/neutral_light</item>
        
        <!-- Error colors -->
        <item name="colorError">@color/accent_red</item>
        <item name="colorOnError">@color/neutral_white</item>
        
        <!-- Status bar color -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        
        <!-- Custom attributes for SmartFan -->
        <item name="android:fontFamily">sans-serif</item>
    </style>
    
    <!-- Base SmartFan style -->
    <style name="SmartFan">
        <!-- Base style for SmartFan components -->
    </style>
    
    <!-- Card Styles for Dark Mode -->
    <style name="SmartFan.Card" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">12dp</item>
        <item name="cardElevation">8dp</item>
        <item name="cardBackgroundColor">@color/card_background_dark</item>
        <item name="contentPadding">16dp</item>
    </style>
    
    <!-- Text Styles for Dark Mode -->
    <style name="SmartFan.Text">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">@color/neutral_light</item>
    </style>
    
    <style name="SmartFan.Text.Headline">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textColor">@color/neutral_light</item>
        <item name="android:textSize">20sp</item>
    </style>
    
    <style name="SmartFan.Text.Body">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">@color/neutral_light</item>
        <item name="android:textSize">16sp</item>
    </style>
    
    <style name="SmartFan.Text.Caption">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">@color/neutral_medium</item>
        <item name="android:textSize">12sp</item>
    </style>
</resources>