<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme - Light Mode -->
    <style name="Theme.SmartFan" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color: Cool blue/teal -->
        <item name="colorPrimary">@color/primary_blue</item>
        <item name="colorPrimaryVariant">@color/primary_blue_dark</item>
        <item name="colorOnPrimary">@color/neutral_white</item>
        
        <!-- Secondary brand color: Warm orange -->
        <item name="colorSecondary">@color/secondary_orange</item>
        <item name="colorSecondaryVariant">@color/secondary_orange_dark</item>
        <item name="colorOnSecondary">@color/neutral_white</item>
        
        <!-- Surface colors -->
        <item name="colorSurface">@color/card_background_light</item>
        <item name="colorOnSurface">@color/neutral_dark</item>
        <item name="colorOnSurfaceVariant">@color/neutral_medium</item>
        
        <!-- Background colors -->
        <item name="android:colorBackground">@color/neutral_light</item>
        <item name="colorOnBackground">@color/neutral_dark</item>
        
        <!-- Error colors -->
        <item name="colorError">@color/accent_red</item>
        <item name="colorOnError">@color/neutral_white</item>
        
        <!-- Status bar color -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        
        <!-- Custom attributes for SmartFan -->
        <item name="android:fontFamily">sans-serif</item>
    </style>
    
    <!-- Base SmartFan style -->
    <style name="SmartFan">
        <!-- Base style for SmartFan components -->
    </style>
    
    <!-- App Bar Theme -->
    <style name="Theme.SmartFan.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    
    <!-- Toolbar Theme -->
    <style name="Theme.SmartFan.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    
    <!-- Button Styles -->
    <style name="SmartFan.Button.Primary" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/neutral_white</item>
        <item name="backgroundTint">@color/primary_blue</item>
        <item name="cornerRadius">8dp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textAllCaps">false</item>
        <item name="rippleColor">@color/primary_blue_light</item>
    </style>
    
    <style name="SmartFan.Button.Secondary" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textColor">@color/primary_blue</item>
        <item name="strokeColor">@color/primary_blue</item>
        <item name="cornerRadius">8dp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textAllCaps">false</item>
        <item name="rippleColor">@color/primary_blue_light</item>
    </style>
    
    <!-- Card Styles -->
    <style name="SmartFan.Card" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">12dp</item>
        <item name="cardElevation">4dp</item>
        <item name="cardBackgroundColor">@color/card_background_light</item>
        <item name="contentPadding">16dp</item>
    </style>
    
    <!-- Text Styles -->
    <style name="SmartFan.Text">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">@color/neutral_dark</item>
    </style>
    
    <style name="SmartFan.Text.Headline">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textColor">@color/neutral_dark</item>
        <item name="android:textSize">20sp</item>
    </style>
    
    <style name="SmartFan.Text.Body">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">@color/neutral_dark</item>
        <item name="android:textSize">16sp</item>
    </style>
    
    <style name="SmartFan.Text.Caption">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">@color/neutral_medium</item>
        <item name="android:textSize">12sp</item>
    </style>
    
    <!-- Switch Style -->
    <style name="SmartFan.Switch" parent="Widget.MaterialComponents.CompoundButton.Switch">
        <item name="thumbTint">@color/primary_blue</item>
        <item name="trackTint">@color/primary_blue_light</item>
    </style>
    
    <!-- Splash Theme -->
    <style name="Theme.SmartFan.Splash" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/primary_blue</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_fan_logo</item>
        <item name="windowSplashScreenAnimationDuration">1000</item>
        <item name="postSplashScreenTheme">@style/Theme.SmartFan</item>
    </style>
</resources>