<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.qppd.smartfan">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.SmartFan"
        tools:targetApi="31">
        
        <!-- Splash Activity (Main Entry Point) -->
        <activity 
            android:name="com.qppd.smartfan.ui.SplashActivity"
            android:exported="true"
            android:theme="@style/Theme.SmartFan.Splash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <!-- Auth Activities -->
        <activity 
            android:name="com.qppd.smartfan.auth.LoginActivity"
            android:exported="false" />
        <activity 
            android:name="com.qppd.smartfan.auth.RegisterActivity"
            android:exported="false" />
        
        <!-- Main App Activities -->
        <activity 
            android:name=".MainActivity"
            android:exported="false" />
        <activity 
            android:name=".SettingsActivity"
            android:exported="false" />
        <activity 
            android:name=".HistoryActivity"
            android:exported="false" />
        
        <!-- Device Activities -->
        <activity 
            android:name="com.qppd.smartfan.device.DeviceLinkActivity"
            android:exported="false" />
        <activity 
            android:name="com.qppd.smartfan.device.DeviceManagementActivity"
            android:exported="false" />

        <!-- Firebase Cloud Messaging Service -->
        <service
            android:name=".MyFirebaseMessagingService"
            android:exported="false">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>
    </application>

</manifest>